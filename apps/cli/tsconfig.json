{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2015",
    "exactOptionalPropertyTypes": true,
    "module": "CommonJS",
    "types": ["vite/client", "jest"]
  },
  "include": ["src"],
  "exclude": ["src/__tests__/__examples__", "src/__tests__/__sky__"]
}
